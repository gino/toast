{
	"compilerOptions": {
		"esModuleInterop": true,
		"strict": true,
		"skipLibCheck": true,
		"jsx": "preserve",
		"module": "ESNext",
		"declaration": true,
		"declarationDir": "types",
		"sourceMap": true,
		"outDir": "dist",
		"moduleResolution": "node",
		"emitDeclarationOnly": true
	},
	"include": ["src/**/*.ts", "src/**/*.tsx"],
	"exclude": ["node_modules"]
}
